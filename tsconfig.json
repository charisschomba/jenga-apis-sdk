{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
  },
  "include": ["src/**/*", "docs"],
  "exclude": ["node_modules", "test",  "lib", "**/*spec.ts"],
  "excludeProtected": true,
  "excludeNotDocumented": true,
    "excludeNotDocumentedKinds": [
        "Property",
        "Interface",
        "TypeAlias",
    ],
}
